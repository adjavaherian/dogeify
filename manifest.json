{
  "manifest_version": 2,

  "name": "Super Dogeify!",
  "description": "A quick and fun way to spice up any website with Doge love.  Refresh page to go back to normal.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Super Dogeify!"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "https://www.reddit.com/"
  ]
}
